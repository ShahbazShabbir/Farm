<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Crop">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/blue_bg">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/topbar"
        android:background="@color/white"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menu"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CROP"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/notification"
                    android:id="@+id/notification"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back"
                    android:id="@+id/back"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rocket"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/headphones"
                    android:id="@+id/contactus"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_above="@id/bottombar"
        android:layout_width="match_parent"
        android:layout_below="@+id/topbar"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler"
            />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="50dp"
            android:id="@+id/layout_one"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.skydoves.elasticviews.ElasticCardView
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:id="@+id/live"
                    android:background="@color/white"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/corn"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Corn"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>

                </com.skydoves.elasticviews.ElasticCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

<!--                <com.ngallazzi.highlightingview.HighlightingView-->
<!--                    android:id="@+id/detection"-->
<!--                    android:layout_width="121dp"-->
<!--                    android:layout_height="120dp"-->
<!--                    android:layout_margin="20dp"-->
<!--                    android:layout_marginStart="8dp"-->
<!--                    app:animationDurationInMillis="1500"-->
<!--                    app:bottomText="ON"-->
<!--                    app:bottomTextColor="@color/white"-->
<!--                    app:highlightedBackgroundColor="@color/green_light"-->
<!--                    app:highlightedBottomText="OFF"-->
<!--                    app:idleBackgroundColor="@color/red"-->
<!--                    app:idleIcon="@drawable/weed2"-->
<!--                    app:middleText="Press To"-->
<!--                    app:middleTextColor="@color/white"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    />-->

                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:background="@color/red"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_layout_corn">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/weed2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Press To"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_crop_status"
                        android:text="on"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:id="@+id/layout_two"
            android:layout_below="@id/layout_one"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.skydoves.elasticviews.ElasticCardView
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:id="@+id/crop"
                    android:background="@color/white"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/cotton"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cotton"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>

                </com.skydoves.elasticviews.ElasticCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">


                <com.ngallazzi.highlightingview.HighlightingView
                    android:id="@+id/everywhere"
                    android:layout_width="121dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    android:layout_marginStart="8dp"
                    app:animationDurationInMillis="1500"
                    app:bottomText="ON"
                    app:bottomTextColor="@color/white"
                    app:highlightedBackgroundColor="@color/green_light"
                    app:highlightedBottomText="OFF"
                    app:idleBackgroundColor="@color/red"
                    app:idleIcon="@drawable/weed2"
                    app:middleText="Press To"
                    app:middleTextColor="@color/white"
                    android:layout_centerHorizontal="true"
                    />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>